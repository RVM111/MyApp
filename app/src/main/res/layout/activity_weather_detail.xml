<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WeatherDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/weather_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:menu="@menu/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weather_detail_day_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_detail_toolbar" />

    <TextView
        android:id="@+id/weather_detail_date_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/weather_detail_day_textView"
        app:layout_constraintTop_toBottomOf="@+id/weather_detail_day_textView" />

    <ImageView
        android:id="@+id/weather_detail_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weather_detail_date_textView"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/weather_detail_wind_and_cloud_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/weather_detail_date_textView"
        app:layout_constraintTop_toBottomOf="@+id/weather_detail_imageView" />

    <TextView
        android:id="@+id/weather_detail_wind_and_cloud_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/weather_detail_wind_and_cloud_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/weather_detail_wind_and_cloud_label_textView" />

    <TextView
        android:id="@+id/weather_detail_temperature_humidity_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/weather_detail_wind_and_cloud_textView"
        app:layout_constraintTop_toBottomOf="@+id/weather_detail_wind_and_cloud_textView" />

    <TextView
        android:id="@+id/weather_detail_temperature_humidity_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/weather_detail_temperature_humidity_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/weather_detail_temperature_humidity_label_textView" />

    <TextView
        android:id="@+id/weather_detail_air_quality_label_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/weather_detail_temperature_humidity_textView"
        app:layout_constraintTop_toBottomOf="@+id/weather_detail_temperature_humidity_textView" />

    <TextView
        android:id="@+id/weather_detail_air_quality_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/weather_detail_air_quality_label_textView"
        app:layout_constraintTop_toBottomOf="@+id/weather_detail_air_quality_label_textView" />


</androidx.constraintlayout.widget.ConstraintLayout>