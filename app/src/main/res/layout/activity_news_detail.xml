<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/news_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:menu="@menu/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/news_detail_imageView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/news_detail_toolbar"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/news_detail_title_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/news_detail_imageView"
        app:layout_constraintTop_toBottomOf="@+id/news_detail_imageView" />

    <TextView
        android:id="@+id/news_detail_source_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/news_detail_title_textView"
        app:layout_constraintTop_toBottomOf="@+id/news_detail_title_textView" />

    <TextView
        android:id="@+id/news_detail_description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/news_detail_source_textView"
        app:layout_constraintTop_toBottomOf="@+id/news_detail_source_textView" />

    <TextView
        android:id="@+id/news_detail_time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/news_detail_source_textView"
        app:layout_constraintStart_toEndOf="@+id/news_detail_source_textView"
        app:layout_constraintTop_toTopOf="@+id/news_detail_source_textView" />
</androidx.constraintlayout.widget.ConstraintLayout>